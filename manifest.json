{
	"manifest_version" : 2,
	"name" : "CompileIt",
	"version" : "1.0",

	"background" : {
		"scripts" : ["background.js"]
	},

	"browser_action" : {
	    "default_popup":"popup.html"
  	},

	"content_scripts" : [
		{
			"matches" : [
				"<all_urls>"	//injects content.js script on all pages we visit
			],
			"js" : ["jquery.min.js","content.js"]
		}
	],

	"permissions" : [                  
    "tabs",
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "http://*/",
    "https://*/",
    "https://ajax.googleapis.com/"
  	]
}